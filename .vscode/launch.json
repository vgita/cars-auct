{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Docker .NET Attach (Preview)",
			"type": "docker",
			"request": "attach",
			"platform": "netCore",
			"sourceFileMap": {
				"/app": "${workspaceFolder}"
			}
		},
		{
			"name": "Auction Launch",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/AuctionService/bin/Debug/net8.0/AuctionService.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/AuctionService",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			}
		},
		{
			"name": "Search Launch",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/SearchService/bin/Debug/net8.0/SearchService.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/SearchService",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			}
		},
		{
			"name": "Docker .NET Launch",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"netCore": {
				"appProject": "${workspaceFolder}/src/AuctionService/AuctionService.csproj"
			}
		}
	]
}
